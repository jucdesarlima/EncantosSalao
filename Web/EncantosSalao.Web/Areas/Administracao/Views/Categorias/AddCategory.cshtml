@model EncantosSalao.Web.VisaoModelos.Categorias.CategoriaEntradaModelo
@{
    this.ViewData["Title"] = "Adiciona Categoria";
}

<div class="col-lg-6">
    <h2>Nova Categoria</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Nome</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Nome" class="form-control" required="required">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Imagem</label>
            <div class="col-sm-10">
                <input type="file" asp-for="@Model.Imagem" class="form-control-file image-upload" required="required" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Descricao</label>
            <div class="col-sm-10">
                <textarea type="text" asp-for="@Model.Descricao" class="form-control" required="required"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Administracao" asp-controller="Categorias" asp-action="AdicionaCategoria">
                    Adicionar Categoria
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Administracao" asp-controller="Categorias" asp-action="Index">Cancela</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/upload-image.js" asp-append-version="true"></script>
}
