@model EncantosSalao.Web.VisaoModelos.Cidades.CidadeEntradaModelo
@{
    this.ViewData["Title"] = "Adiciona Cidade";
}

<div class="col-lg-6">
    <h2>Nova Cidade</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Nome</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Nome" class="form-control" required="required">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Administracao" asp-controller="Cidades" asp-action="AdicionaCidade">
                    Adiciona Cidade
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Administraco" asp-controller="Cidades" asp-action="Index">Cancela</a>
            </div>
        </div>
    </form>
</div>
