@model EncantosSalao.Web.VisaoModelos.Servicos.ServicoEntradaModelo
@{
    this.ViewData["Title"] = "Adiciona Servico";
    var categorias = this.ViewData["Categorias"] as SelectList;
}

<div class="col-lg-6">
    <h2>Novo Servico</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Nome</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Nome" class="form-control" required="required">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Categoria</label>
            <div class="col-sm-10">
                <select asp-for="@Model.IdCategoria" class="form-control" asp-items="@categorias">
                </select>
                <span asp-validation-for="IdCategoria" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Descricao</label>
            <div class="col-sm-10">
                <textarea type="text" asp-for="@Model.Descricao" class="form-control" required="required"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Administracao" asp-controller="Servicos" asp-action="AdicionaServico">
                    Adiciona Serviço
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Administracao" asp-controller="Servicos" asp-action="Index">Cancela</a>
            </div>
        </div>
    </form>
</div>
